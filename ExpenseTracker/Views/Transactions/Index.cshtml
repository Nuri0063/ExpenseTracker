@model IEnumerable<ExpenseTracker.Models.Transaction>

@{
    ViewData["Title"] = "Harcamalar Listesi";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Harcamalar</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-action="Create">Yeni Harcama Ekle</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Tutar</th>
                <th>Tarih</th>
                <th>Tür</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category</td>
                    <td>@item.Amount ₺</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>
                        @if (item.IsIncome)
                        {
                            <span class="badge bg-success">Gelir</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Gider</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
